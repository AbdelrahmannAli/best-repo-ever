<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ClientZipCodeEmpty</fullName>
    <active>false</active>
    <errorConditionFormula>AND(RecordType.DeveloperName  = &apos;Client&apos;, ISBLANK(MailingPostalCode))</errorConditionFormula>
    <errorDisplayField>MailingPostalCode</errorDisplayField>
    <errorMessage>At least the patient&apos;s zip code must be filled in to proceed.</errorMessage>
</ValidationRule>
